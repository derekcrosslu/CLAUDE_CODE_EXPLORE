{
  "description": "Native QuantConnect Optimization - RSI Mean Reversion Strategy",
  "parameters": [
    {
      "name": "rsi_oversold",
      "min": 30,
      "max": 45,
      "step": 5
    },
    {
      "name": "bb_distance_pct",
      "min": 1.02,
      "max": 1.10,
      "step": 0.04
    },
    {
      "name": "use_trend_filter",
      "min": 0,
      "max": 1,
      "step": 1
    }
  ],
  "target": "TotalPerformance.PortfolioStatistics.SharpeRatio",
  "targetTo": "max",
  "nodeType": "O2-8",
  "parallelNodes": 2,
  "notes": "Smaller grid for testing: 4 oversold × 3 BB distance × 2 trend filter = 24 combinations"
}
