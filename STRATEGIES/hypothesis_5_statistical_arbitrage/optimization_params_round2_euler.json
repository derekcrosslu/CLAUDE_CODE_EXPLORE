{
  "description": "Round 2 Optimization - 1,920 combinations with Grid Search",
  "goal": "Optimize entry/exit logic (z_entry, z_exit, lookback) + refine Round 1 winners",
  "strategy": "QuantConnect.Optimizer.Strategies.GridSearchOptimizationStrategy",
  "target": "TotalPerformance.PortfolioStatistics.SharpeRatio",
  "targetTo": "max",
  "nodeType": "O2-8",
  "parallelNodes": 2,
  "maximumConcurrentBacktests": 60,
  "parameters": [
    {
      "name": "position_size_per_pair",
      "min": 0.35,
      "max": 0.55,
      "step": 0.05,
      "description": "5 values: 0.35, 0.40, 0.45, 0.50, 0.55"
    },
    {
      "name": "max_holding_days",
      "min": 30,
      "max": 40,
      "step": 10,
      "description": "2 values: 30, 40"
    },
    {
      "name": "stop_loss_z",
      "min": 3.5,
      "max": 5.0,
      "step": 0.5,
      "description": "4 values: 3.5, 4.0, 4.5, 5.0"
    },
    {
      "name": "z_entry_threshold",
      "min": 1.5,
      "max": 3.0,
      "step": 0.5,
      "description": "4 values: 1.5, 2.0, 2.5, 3.0"
    },
    {
      "name": "z_exit_threshold",
      "min": 0.2,
      "max": 0.8,
      "step": 0.2,
      "description": "4 values: 0.2, 0.4, 0.6, 0.8"
    },
    {
      "name": "lookback_period",
      "min": 30,
      "max": 70,
      "step": 20,
      "description": "3 values: 30, 50, 70"
    }
  ],
  "note": "Grid search will test all 5×2×4×4×4×3 = 1,920 combinations systematically.",
  "baseline_from_round1": {
    "sharpe": 1.034,
    "position_size_per_pair": 0.40,
    "max_holding_days": 30,
    "stop_loss_z": 4.0,
    "z_entry_threshold": 2.0,
    "z_exit_threshold": 0.5,
    "lookback_period": 60
  },
  "target_sharpe": 1.25,
  "usage": "./qc_optimize run --config optimization_params_round2_euler.json --strategy euler --max-backtests 60"
}
