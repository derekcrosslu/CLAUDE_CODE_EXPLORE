#!/bin/bash
# Timeline CLI wrapper for autonomous framework development
#
# Usage:
#   ./timeline next
#   ./timeline status
#   ./timeline complete w1-test-003
#
# Or add to PATH:
#   export PATH="/Users/donaldcross/ALGOS/Experimentos/Sanboxes/CLAUDE_CODE_EXPLORE:$PATH"
#   timeline next

# Get the directory of this script (absolute path resolution - Beyond MCP pattern)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Execute timeline CLI with venv python
exec "${SCRIPT_DIR}/venv/bin/python" "${SCRIPT_DIR}/SCRIPTS/timeline_cli.py" "$@"
