#!/bin/bash
# Decision Framework CLI wrapper for autonomous strategy development
#
# Usage:
#   ./decision evaluate-backtest --results backtest.json
#   ./decision route --phase backtest --decision PROCEED_TO_OPTIMIZATION
#
# Or add to PATH:
#   export PATH="/Users/donaldcross/ALGOS/Experimentos/Sanboxes/CLAUDE_CODE_EXPLORE:$PATH"
#   decision evaluate-backtest --results backtest.json

# Get the directory of this script (absolute path resolution - Beyond MCP pattern)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Execute decision CLI with venv python
exec "${SCRIPT_DIR}/venv/bin/python" "${SCRIPT_DIR}/SCRIPTS/decision_cli.py" "$@"
